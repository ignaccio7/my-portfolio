---
import Section from "../components/Section.astro";
import Title from "../components/Title.astro";
import TagProject from "../components/TagProject.astro";
import IconHTML from "../icons/IconHTML.astro";
import IconGoTo from "../icons/IconGoTo.astro";

const projects = [
  {
    id: 1,
    title: "Maquetación - Ecommerce",
    description:
      "Es un ejemplo de maquetación de un ecommerce con HTML y CSS. El sitio esta desarrollado en mobile first y se adapta a la pantalla de todas las resoluciones.",
    url: "https://ignaccio7.github.io/20ProyectosHTMLCSS/ecommerce/",
    image: "https://github.com/ignaccio7/my-portfolio/blob/master/public/projects/sitio1.png?raw=true",
    tag:IconHTML,
  },
  {
    id: 2,
    title: "Maquetación - Cafetería",
    description:
      "Es un ejemplo de maquetación de un cafetería con HTML y CSS. Se puede apreciar diferentes estilos con el uso de grillas en las diferentes secciones del sitio.",
    url: "https://ignaccio7.github.io/20ProyectosHTMLCSS/Cafeteria/",
    image: "https://github.com/ignaccio7/my-portfolio/blob/master/public/projects/sitio2.png?raw=true",
    tag:IconHTML,
  },
  {
    id: 3,
    title: "Maquetación - Nucleus",
    description:
      "Es un ejemplo de maquetación de un sitio de Venta de Servicio con HTML y CSS. Se puede apreciar que se uso la metodologia BEM para organizar el código y que se puede apreciar la adaptación del sitio a la pantalla de todas las resoluciones.",
    url: "https://ignaccio7.github.io/20ProyectosHTMLCSS/Nucleus/",
    image: "https://github.com/ignaccio7/my-portfolio/blob/master/public/projects/sitio3.png?raw=true",
    tag:IconHTML,
  },
  {
    id: 4,
    title: "Maquetación - Audifonos",
    description:
      "Es un ejemplo de maquetación de un sitio de Audifonos con HTML y CSS. Se puede apreciar que se hizo uso de clases utilitarias para la reutilizacion de código y tambien es un sitio que se adapta a la pantalla de todas las resoluciones.",
    url: "https://ignaccio7.github.io/20ProyectosHTMLCSS/TECHPRO-SitioParaAudifonos/",
    image: "https://github.com/ignaccio7/my-portfolio/blob/master/public/projects/sitio4.png?raw=true",
    tag:IconHTML,
  },
  {
    id: 5,
    title: "Maquetación - Arquitectura",
    description:
      "Es un ejemplo de maquetación de un sitio de Arquitectura con HTML y CSS. Se puede apreciar que se hizo uso de clases utilitarias para la reutilizacion de código y tambien es un sitio que se adapta a la pantalla de todas las resoluciones.",
    url: "https://ignaccio7.github.io/20ProyectosHTMLCSS/Architecture-SitioDeArquitectura/",
    image: "https://github.com/ignaccio7/my-portfolio/blob/master/public/projects/sitio5.png?raw=true",
    tag:IconHTML,
  },
];
---

<Section name="projects" class="mt-12 md:mt-0">
  <Title content="Mis" emphasis="proyectos" />
  <div
    class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
  >
    {
      projects.map((project) => {
        return (
          <div class="project overflow-hidden rounded-md shadow-xl relative group">
            <img src={project.image} alt={project.title} />

            <article class="absolute inset-0 flex flex-col gap-2 items-center justify-center bg-gradient-to-tr from-third to-transparent translate-y-full group-hover:translate-y-0 transition-transform duration-300 ease-in-out">
              <h3 class="text-step1 font-extrabold text-white">
                {project.title}
              </h3>
              <p class="line-clamp-3 text-center text-step01">
                {project.description}
              </p>
              <a
                href={project.url}
                target="_blank"
                rel="noopener noreferrer"
              >
                <IconGoTo class="size-8 bg-white text-black rounded-full" />
              </a>
            </article>

            <TagProject class="group-hover:opacity-0 transition-opacity duration-300 ease">
              <project.tag class="size-10" />
            </TagProject>
          </div>
        );
      })
    }
  </div>
</Section>

<style>
  div.project {
    animation: entry-bottom linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 30%;
  }
</style>